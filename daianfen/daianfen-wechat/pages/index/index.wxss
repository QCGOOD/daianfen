/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.poster{
	width:100%;
	height:660rpx;
	/* background:#f2f2f2; */
	overflow: hidden;
}
.poster .poster-img{
	width:100%;
	height:100%;
}

.btn{
	width:640rpx;
	height:96rpx;
	border:1px solid #b80223;
	/*border-top-width: 1px;*/
	border-radius:8px;
	font-size:34rpx;
	color:#b80223;
	text-align: center;
	line-height: 96rpx;
	margin:50rpx auto 0;
}
.btn:first-child{
	margin-bottom:50rpx;
}

.footer-logo{
	width:300rpx;
	height:180rpx;
	margin:30rpx auto;
}
.footer-logo image{
	width:100%;
	height:100%;
}