page{
   width:100%;
   font-size:28rpx;
   background:#f2f2f2;
}
/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.null{
  width:100%;
  text-align: center;
  color:#808080;
}
.null image{
  display: block;
  width:450rpx;
  height:400rpx;
  margin:100rpx auto 20rpx;
}

.coupons-state{
  position:fixed;
  top:0;
  left:0;
   display:flex;
   justify-content: space-around;
   align-items: center;
   width:100%;
   width:100vw;
   background:#fff;
   font-size:28rpx;
   color:#999999;
   z-index:222;
}

.coupons-state view{
   height:50px;
   line-height: 50px;
   box-sizing: border-box;
}
.coupons-state .active{
   color: #b80223;
   border-bottom:2px solid #b80223;
}

.scroll-coupon{
  position: relative;
  width:100%;
  box-sizing: border-box;
  font-size:32rpx;
  margin-top:65px;
}

