@import 'iconfont.wxss';
page{
  font-size:28rpx;
}
/* 企成技术支持 */
.copyright{
   display: flex;
   justify-content: center;
   align-items: center;
   width:100%;
   height:30px;
   font-size:22rpx;
   color:#999;
   line-height: 30px;
   overflow: hidden;
 }
 .qc-logo{
   width:30px;
   height:30px;
   border-radius: 50%;
 }

 /* 没有更多数据 */
 .page-bottom{
	 position:relative;
	 height:30px;
	 line-height: 30px;
	 text-align: center;
	 font-size:22rpx;
	 color:#999;
	 margin:0 30rpx;
 }
 .page-bottom::before{
	 position: absolute;
	 top:50%;
	 left:0;
	 content:'';
	 width:35%;
	 border-bottom:1px solid #ccc;
 }
 .page-bottom::after{
	position: absolute;
	top:50%;
	right:0;
	content:'';
	width:35%;
	border-bottom:1px solid #ccc;
}

 /* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 选择器 */
.scroll-wrap{
	position: relative;
	width:100%;
	height:90rpx;
	border-radius: 8px;
	border:1px solid #ccc;
	line-height: 90rpx;
	box-sizing: border-box;
	padding:0 25rpx;
	margin-top:30rpx;
}
.scroll-wrap:first-child{
	margin-top:0;
}
.scroll-wrap .scroll-view{
	position: absolute;
	left:-1px;
	top:76rpx;
	width:100%; 
	max-height: 320rpx;
	background:#fff;
	border-radius:0 0 8px 8px;
	border:1px solid #ccc;
	padding:8px 0;
	z-index:300;
}
.scroll-wrap .scroll-view .scroll-view-item{
	width:100%;
	line-height: 2.0;
	padding-left:105rpx;
	box-sizing: border-box;
	color:#333;
}

/* 二维码 */
.qr-wrap{
	position: fixed;
	top:0;
	left:0;
	display: flex;
	justify-content: center;
	align-items: center;
	width:100%;
	width:100vw;
	height:100%;
	height:100vh;
	background:rgba(0,0,0,.5);
	z-index:999;
}
 
