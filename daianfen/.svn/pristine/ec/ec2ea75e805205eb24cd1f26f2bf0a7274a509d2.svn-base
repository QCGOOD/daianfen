
page{
	font-size:28rpx;
}

.banner{
	width:100%;
	height:400rpx;
	overflow: hidden;
}
.banner image{
	width:100%;
	height:100%;
}

.main{
	margin:0 30rpx;
}

.main .main-title{
	font-size:40rpx;
	text-align:center;
	padding:30rpx 0;
}

.main .section{
	position: relative;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	width:100%;
	height:90rpx;
	border-radius: 8px;
	border:1px solid #ccc;
	line-height: 90rpx;
	box-sizing: border-box;
	padding:0 25rpx;
	margin-top:30rpx;
}
.main .section:first-child{
	margin-top:0;
}
.main .section .section-value{
	display: block;
	flex:1;
	height:100%;
	color:#808080;
	margin-left:5px;
}
.main .section .icon{
	padding-left: 5px;
}

.btn-wrap{
	position:fixed;
	left: 0;
	bottom:0;
	display: flex;
	justify-content: center;
	width:100%;
	width:100vw;
	min-height:100rpx;
	background: #fff;
}
.btn{
	width:690rpx;
	height:100rpx;
	background: linear-gradient(to right, #b80223 , #f48b81);
	border-radius:30px;
	font-size: 45rpx;
	text-align: center;
	line-height: 100rpx;
	color:#fff;
	margin-bottom:30rpx;
}

